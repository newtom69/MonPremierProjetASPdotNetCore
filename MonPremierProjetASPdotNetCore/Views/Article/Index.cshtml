@model IEnumerable<MonPremierProjetASPdotNetCore.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreVendus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Allergenes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grammage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Litrage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DansCarte)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                <img src="/Images/@item.Image" alt="@item.Nom" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreVendus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Allergenes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grammage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Litrage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DansCarte)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
